{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            /*
            * NB: Remote debugging requires to install nodemon package: npm install nodemon
            */          
            "type": "node",
            "request": "attach",
            "name": "Attach to Remote",
            "address": "localhost",
            "port": 9222,
            "localRoot": "${workspaceFolder}/src/server",
            "remoteRoot": "/home/ccl/git/CodeCloud/src/server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            //"cwd": "${workspaceFolder}/out/client/",
            "webRoot": "${workspaceFolder}/webcontent",
            "sourceMaps": true
        }
    ]
}